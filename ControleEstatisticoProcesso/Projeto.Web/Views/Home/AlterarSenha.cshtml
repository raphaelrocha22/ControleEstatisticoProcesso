@model Projeto.Web.Models.Home.UpdateViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Alterar Senha</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body class="container bg-info">

    @using (Html.BeginForm())
    {
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title text-center"><strong>Alterar Senha</strong></div>
                </div>
                <div style="padding-top:30px" class="panel-body">
                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><strong>@@</strong></span>
                        @Html.TextBoxFor(model => model.Login, new { @class = "form-control", @placeholder = "Login" })
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.Login)</span>
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.SenhaAntiga, new { @class = "form-control", @placeholder = "Senha Antiga" })
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.SenhaAntiga)</span>
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control", @placeholder = "Senha Nova" })
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.Senha)</span>
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.SenhaConfirm, new { @class = "form-control", @placeholder = "Confirme Senha Nova" })
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.SenhaConfirm)</span>
                    </div>

                    <div style="margin-top:10px" class="form-group">
                        <div class="col-md-12 controls">
                            <input type="submit" value="Atualizar" class="btn btn-primary center-block" style="width:100px" />
                            <br />

                            @if (ViewBag.Sucesso != null)
                            {
                                if (ViewBag.Sucesso)
                                {
                                    <div class="alert alert-success text-center">@ViewBag.Mensagem</div>}
                                else
                                {
                                    <div class="alert alert-danger text-center">@ViewBag.Mensagem</div>}
                            }

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                <a href="/Home/Login">Voltar para a página de login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
