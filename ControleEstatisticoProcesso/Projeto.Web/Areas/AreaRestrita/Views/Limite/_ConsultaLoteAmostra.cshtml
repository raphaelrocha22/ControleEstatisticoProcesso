            @Html.DisplayNameFor(model => model.QtdReprovada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PercentualReprovado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioAnalise)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoLote)
