@model Projeto.Web.Areas.AreaRestrita.Models.Limite.MetodosPartial
@{
    ViewBag.Title = "ConsultaAmostras";
    Layout = "~/Areas/AreaRestrita/Views/_Shared/_Layout.cshtml";
}

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="~/Scripts/Limite/calculoLimite.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#btnCarregarGrafico').click(function () {
            var lista = @Html.Raw(Json.Encode(Model));
            drawChart(lista);
        });
    });

</script>

<h4>Amostras usadas para cálculo do Limite de Controle</h4>
<hr />

<input type="button" class="btn btn-sm" id="btnCarregarGrafico" value="Carregar Gráfico" /><br /><br />

<div class="row">
    <label id="lblLimites"></label>
    <div class="col-md-12">
        <div id="linechart_material" style="height:400px"></div>
    </div>
</div>

<div class="row" style="margin-top:15px">
    @Html.Partial("_ConsultaLoteAmostra", Model.ConsultaLoteAmostra)
</div>

